<% layout('/layouts/boilerplate') %>

<link rel="stylesheet" href="/css/comments/labels.css">

<div class="card justify-content-center" style="min-height: 100%">
    <div class="card-header" id="id-header">
        <div class="card-title d-flex flex-row justify-content-evenly flex-wrap align-content-around">
            <span class="align-self-center"> Dataset Id : <span id="datasetId"><%= datasetId %></span></span>
            <span class="align-self-center"> Video Id : <span id="videoId"><%= video.videoId %></span></span>
            <span class="align-self-center"> Label Id : <span id="labelId"></span></span>
            <a type="button" class="btn  btn-primary" href="/datasets/<%= datasetId %>">Back To
                Dataset</a>
        </div>
    </div>
    <iframe class="card-img-top flex-fill=" id="iframe" src="<%= video.url %>" style="height: 50vh"></iframe>
    <div class="card-body" id="ttitle">
        <h2 class="card-title"><%= video.title %></h2>
    </div>
    <div class="card-body text-center" id="ccomment">
        <h3 class="card-text comment" id="comment"></h3>
    </div>
    <div class="d-flex flex-row justify-content-evenly flex-wrap align-content-around" id="class-box">
        <button class="btn btn-danger m-4" id="remove_btn">Remove Label</button>
    </div>

    <div class="card-body d-flex flex-column justify-content-center align-items-center" id="cdone">
        <h1 class="card-text align-self-center finish">Finished all comments in this video.</h1>
        <a type="button" class="btn btn-lg btn-success my-5 finish" href="/datasets/<%= datasetId %>">Back To
            Dataset</a>
    </div>

</div>

<script src="/js/comments/labels.js"></script>


