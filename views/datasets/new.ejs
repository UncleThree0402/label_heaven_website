<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Dataset</h1>
    <div class="col-6 offset-3">
        <form action="/datasets" method="POST" id="datasets-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" id="title" class="form-control">
            </div>
            <div class="mb-3">
                <label for="class" class="form-label">Classes</label>
                <ul class="list-group mb-3" id="class">
                </ul>
                <div class="alert alert-warning" role="alert" id="class-alert">
                    Pleas insert class to this dataset.
                </div>
                <div class="d-flex flex-row align-content-start flex-wrap">
                    <div class="me-3">
                        <label class="form-label col-form-label" for="class-name">Class Name</label>
                    </div>
                    <div class="me-3">
                        <input type="text" id="class-name" class="form-control">
                    </div>
                    <div>
                        <button class="btn btn-secondary" id="add_class_btn">Add Class</button>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" name="" id="description" cols="30" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <button  id="submit-btn" class="btn btn-success">Add Dataset</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/datasets/new.js"></script>